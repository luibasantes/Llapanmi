<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bgmulticolor"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/logojuego" />

        <TextView
            android:id="@+id/avatar_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Escoge tu avatar"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:paddingTop="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/rightyellow"
                android:id="@+id/right_arrow"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/leftyellow"
                android:id="@+id/left_arrow"
                android:adjustViewBounds="true" />

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/avatar_carousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:items_visible="three" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_avatarListo"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@mipmap/botonregistro"
            android:elevation="0dp"
            android:layout_marginBottom="50dp"
            android:layout_margin="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp" />

    </LinearLayout>

</RelativeLayout>
